# FileInASnap MCP Server Configuration

# Server Configuration
FILEINASNAP_HOST=0.0.0.0
FILEINASNAP_PORT=8000
FILEINASNAP_DEBUG=false

# Provider Configuration
FILEINASNAP_PRIMARY_PROVIDER=openrouter
# FILEINASNAP_FALLBACK_PROVIDER=minimax

# OpenRouter Configuration (Free API - No key required for some models)
# OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://fileinasnap.io
OPENROUTER_SITE_NAME=FileInASnap
OPENROUTER_DEFAULT_MODEL=mistralai/mistral-7b-instruct

# MiniMax Configuration (Scaffolded - Ready for Future Activation)
# MINIMAX_API_KEY=your_minimax_api_key_here
# MINIMAX_API_HOST=https://api.minimax.io
# MINIMAX_BASE_PATH=/path/to/output
# MINIMAX_RESOURCE_MODE=url

# File Processing Configuration
FILEINASNAP_MAX_FILE_SIZE_MB=100
FILEINASNAP_SUPPORTED_TYPES=pdf,docx,txt,md,xlsx,csv,jpg,jpeg,png,gif,webp,bmp,mp4,avi,mov,mkv,webm,mp3,wav,ogg,m4a,flac

# Processing Configuration
FILEINASNAP_BATCH_SIZE=10
FILEINASNAP_WORKERS=4
FILEINASNAP_CACHE_TTL=24

# Rate Limiting
FILEINASNAP_RATE_LIMIT=100
FILEINASNAP_RATE_WINDOW=3600

# Storage Configuration
FILEINASNAP_TEMP_DIR=/tmp/fileinasnap
FILEINASNAP_OUTPUT_DIR=./output

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Database Configuration
DATABASE_URL=sqlite:///fileinasnap.db
